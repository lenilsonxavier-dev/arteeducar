const ferramentasColorir = document.getElementById("ferramentasColorir");
let ferramentaAtual = "pincel";
let corAtual = "#ff0000";

// Miniaturas
imagensColorir.forEach((url, index) => {
  const div = document.createElement("div");
  div.className = "colorir-thumb";
