// ========== COLORIR ONLINE (j√° existente) ==========
const imagensColorir = [
  "https://i.imgur.com/Q6oaW2D.jpg",
  "https://i.imgur.com/of23VQu.jpg",
  "https://i.imgur.com/6JfY8vS.jpg",
